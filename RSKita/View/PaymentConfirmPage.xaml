            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.735"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.321"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label x:Name="lblInfo" Grid.ColumnSpan="3" Content="Selamat!&#xA;Pembayaran anda berhasil&#xD;&#xA;dikonfirmasi." HorizontalAlignment="Left" Height="104" Margin="17,60,0,0" VerticalAlignment="Top" Width="296" FontSize="22" Foreground="White"/>
