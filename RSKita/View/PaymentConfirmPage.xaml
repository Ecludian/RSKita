        <Image x:Name="qe" Grid.ColumnSpan="3" Margin="122,436,133.2,137.2" Source="/RSKita(ALPHA PROTOTYPE) ver.0.0.1;component/Image/qr-code-bc94057f452f4806af70fd34540f72ad.png"/>
        <Frame x:Name="frame" Content="Frame" HorizontalAlignment="Center" Height="667" VerticalAlignment="Top" Width="375" NavigationUIVisibility="Hidden" Margin="0,0,0.2,0" Grid.ColumnSpan="3"/>
        <Button x:Name="btnConfirm" Grid.ColumnSpan="3" Content="Konfirmasi" HorizontalAlignment="Left" Height="34" Margin="37,544,0,0" VerticalAlignment="Top" Width="295" Foreground="White" BorderBrush="#FF129A7F" Background="#FF129A7F" Click="btnConfirm_Click"/>
    </Grid>
</Page>
